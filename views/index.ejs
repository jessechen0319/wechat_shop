<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="/js/vue.js"></script>
  <script src="/js/vue-router.js"></script>
  <script src="/js/data-bus.js"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/app.css">
  <link rel="stylesheet" href="/stylesheets/index.css">
  <link rel="stylesheet" href="/stylesheets/search.css">
  <link rel="stylesheet" href="/stylesheets/cart.css">
  <script src="/component/menu.js"></script>
  <script src="/component/index.js"></script>
  <script src="/component/index-recommand-panel.js"></script>
  <script src="/component/search.js"></script>
  <script src="/component/item-list.js"></script>
  <script src="/component/cart.js"></script>
  <title>明天生活--购物馆</title>
</head>

<body>
  <div id="app">
    <router-view @addtocart="addToCart" :cartitems="cart_items"></router-view>
    <bottom-menu :cartamount="cart_amount"></bottom-menu>
  </div>
</body>
<script>


  let app_data = {
    cart_amount: 0,
    cart_items: []
  };

  let app_computed = {
    
  };

  let app_watch = {
    cart: function(val, oldVal){
      console.log("hello world");
    }
  }
  let app_methods = {
    addToCart: function(){
      this.cart_amount += 1;
    }
  };

  let app_routers = [
    {
      name: "index",
      path: "/index",
      component: index
    },
    {
      name: "search",
      path: "/search",
      component: search
    },
    {
      name: "cart",
      path: "/cart",
      component: cart
    }
  ];

  let app_router = new VueRouter({
    routes: app_routers
  });

  var app = new Vue({
    el: "#app",
    data: app_data,
    methods: app_methods,
    router: app_router,
    watch: app_watch,
    computed: app_computed
  });

</script>

</html>